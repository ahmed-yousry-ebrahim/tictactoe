$(document).ready(function(){

    $("#symbol-"+$("#current_player_symbol").val()).removeClass("player-symbol").addClass("player-symbol-active");
    $(".cell").on("click",function(e){
        var rowIndex = $(this).data("row");
        var columnIndex = $(this).data("column");
        var hiddenCellElement = $("#cell_"+rowIndex+"_"+columnIndex);
        if(hiddenCellElement.val() == ""){
            var current_player_symbol = $("#current_player_symbol").val();
            $(this).html(current_player_symbol);
            hiddenCellElement.val(current_player_symbol);
            $("#game-grid").submit();
        }
    })
});